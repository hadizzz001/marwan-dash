generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       String
  img         String[]
  category    String  
}

model Category {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String   @unique 
}

 

model Home {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  desc String   
  img  String[]
}

model Article {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  title String   
  desc String   
  img  String[]
}

model Video {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId 
  img  String[]
}

model Gallery {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId 
  img  String[]
  type String 
}

model Order {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  userInfo  Json
  cartItems Json
}

 